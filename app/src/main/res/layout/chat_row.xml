<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:layout_width="60dp"
        app:srcCompat="@drawable/char_1"
        android:id="@+id/ivFace"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.65"
        android:layout_height="60dp" />

    <ImageView
        android:layout_height="65dp"
        app:srcCompat="@drawable/lchat_2"
        android:id="@+id/ivChatBubble"
        android:layout_width="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="@+id/ivFace"
        app:layout_constraintHorizontal_bias="0.05" />

    <TextView
        android:text="Yaaas"
        android:layout_height="31dp"
        android:id="@+id/tvMessages"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/ivFace"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/ivChatBubble"
        app:layout_constraintBottom_toBottomOf="@+id/ivChatBubble"
        app:layout_constraintVertical_bias="0.52"
        android:layout_width="170dp" />

</android.support.constraint.ConstraintLayout>