<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_character_creation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.dobit.rplife.CharacterCreationActivity"
    android:background="@drawable/blurred_bg"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp">


    <ImageView
        android:layout_width="294dp"
        android:layout_height="377dp"
        app:srcCompat="@drawable/character1"
        android:id="@+id/imageView10"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_faces"
        android:layout_marginBottom="144dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
       android:src="@drawable/faces"
        android:id="@+id/img_faces"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_height="170dp"
        android:layout_weight="0.16"
        android:layout_width="368dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        app:layout_constraintHorizontal_bias="0.43" />

    <Button
        android:text="Face"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/btnFace"
        android:minHeight="30dp"
        app:layout_constraintBottom_toTopOf="@+id/img_faces"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        android:layout_marginTop="8dp"
        android:layout_height="33dp"
        android:layout_width="91dp"
        android:background="@color/colorPrimary"
        android:textSize="24sp" />
    <Button
        android:text="Hair"
        android:id="@+id/btnHair"
        android:minHeight="30dp"
        app:layout_constraintBottom_toTopOf="@+id/img_faces"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        android:layout_marginTop="8dp"
        android:layout_height="33dp"
        android:layout_width="91dp"
        android:background="@color/colorPrimary"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnFace"
        android:layout_marginLeft="8dp"
        android:textSize="24sp" />

    <Button
        android:text="Body"
        android:id="@+id/btnBody"
        android:minHeight="30dp"
        app:layout_constraintBottom_toTopOf="@+id/img_faces"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        android:layout_marginTop="8dp"
        android:layout_height="33dp"
        android:layout_width="91dp"
        android:background="@color/colorPrimary"
        app:layout_constraintRight_toLeftOf="@+id/btnClothes"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="24sp" />

    <Button
        android:text="Clothes"
        android:id="@+id/btnClothes"
        android:minHeight="30dp"
        app:layout_constraintBottom_toTopOf="@+id/img_faces"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        android:layout_marginTop="8dp"
        android:layout_height="33dp"
        android:layout_width="91dp"
        android:background="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.84000003"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="389dp"
        app:srcCompat="@drawable/blugradient_charactercreation"
        android:id="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:layout_height="46dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        android:layout_marginBottom="26dp"
        android:scaleType="fitCenter" />

    <EditText
        android:layout_width="294dp"
        android:layout_height="47dp"
        android:inputType="textPersonName"
        android:text="GAYNIEL213"
        android:ems="10"
        android:id="@+id/character_name"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:textColor="#7ed5a7"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/imageView10"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="126dp"
        android:layout_height="189dp"
        app:srcCompat="@drawable/companion_blurred"
        android:id="@+id/imageView11"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.87" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/next_button"
        android:id="@+id/imgvNextBtn"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>
