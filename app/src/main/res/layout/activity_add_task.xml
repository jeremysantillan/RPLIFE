<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@drawable/add_task_dialog"
    tools:context="com.example.dobit.rplife.Home.AddTask">

    <com.example.dobit.rplife.Home.BebasEditText
        android:layout_width="334dp"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:background="@drawable/txt_title"
        android:text=""
        android:ems="10"
        android:id="@+id/etTitle"
        android:hint="Title"
        android:gravity="center"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:layout_width="334dp"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:background="@drawable/txt_description"
        android:gravity="center"
        android:hint="Description"
        android:textColorHint="@color/colorPrimaryDark"
        android:text=""
        android:ems="10"
        android:id="@+id/etDesc"
        android:layout_alignLeft="@+id/etTitle"
        android:layout_alignStart="@+id/etTitle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etTitle"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:layout_width="156dp"
        android:layout_height="56dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etTimeStart"
        android:hint="Time Start"
        android:gravity="center"
        android:background="@drawable/txt_time_start"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignLeft="@+id/etDueDate"
        android:layout_alignStart="@+id/etDueDate"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etDesc"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/etTimeEnd"
        android:layout_marginLeft="8dp" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:layout_width="156dp"
        android:layout_height="56dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etTimeEnd"
        android:hint="Time End"
        android:gravity="center"
        android:background="@drawable/txt_time_end"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/etTimeStart"
        android:layout_alignBottom="@+id/etTimeStart"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etDesc"
        android:text="TIME END"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="92dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="92dp"
        app:layout_constraintHorizontal_bias="0.07" />


    <com.example.dobit.rplife.Home.BebasTextView
        android:text="Difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTimeStart"
        android:id="@+id/tvRange"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etDueDate" />

    <SeekBar
        android:layout_width="334dp"
        android:layout_height="23dp"
        android:layout_below="@id/tvRange"
        android:id="@+id/seeker"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etDueDate"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:layout_width="334dp"
        android:layout_height="60dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etDueDate"
        android:hint="Due Date"
        android:gravity="center"
        android:background="@drawable/txt_due_date"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_alignLeft="@+id/etDesc"
        android:layout_alignStart="@+id/etDesc"
        android:layout_marginTop="92dp"
        app:layout_constraintTop_toBottomOf="@+id/etDesc"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <ImageView
        android:layout_width="71dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/add_task_cancelbtn"
        android:id="@+id/ivCancel"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        app:srcCompat="@drawable/add_task_checkbtn"
        android:id="@+id/ivAddNewTask"
        android:layout_width="71dp"
        android:layout_height="66dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp" />

    <TextView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/tvMin"
        android:text="0"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/seeker"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ivAddNewTask"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/ivCancel"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />


</android.support.constraint.ConstraintLayout>
