<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@android:color/transparent"
    tools:context="com.example.dobit.rplife.Home.AddTask">

    <ImageView
        android:layout_width="367dp"
        app:srcCompat="@drawable/add_task_dialog_1"
        android:id="@+id/imageView6"
        android:scaleType="centerInside"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_height="480dp"
        android:padding="8dp"
        app:layout_constraintVertical_bias="0.45" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:layout_width="300dp"
        android:layout_height="39dp"
        android:inputType="textPersonName"
        android:background="@drawable/txt_title"
        android:text=""
        android:ems="10"
        android:id="@+id/etTitle"
        android:hint="Title"
        android:gravity="center"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:layout_width="300dp"
        android:inputType="textPersonName"
        android:background="@drawable/txt_description"
        android:gravity="center"
        android:hint="Description"
        android:textColorHint="@color/colorPrimaryDark"
        android:text=""
        android:ems="10"
        android:id="@+id/etDesc"
        android:layout_alignLeft="@+id/etTitle"
        android:layout_alignStart="@+id/etTitle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etTitle"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_height="39dp" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etTimeStart"
        android:hint="Time Start"
        android:gravity="center"
        android:background="@drawable/txt_time_start"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignLeft="@+id/etDueDate"
        android:layout_alignStart="@+id/etDueDate"
        android:layout_height="39dp"
        android:layout_marginStart="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_width="145dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etDesc" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etTimeEnd"
        android:hint="Time End"
        android:gravity="center"
        android:background="@drawable/txt_time_end"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/etTimeStart"
        android:layout_alignBottom="@+id/etTimeStart"
        android:text="TIME END"
        android:layout_height="39dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="42dp"
        android:layout_width="145dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etDesc" />


    <com.example.dobit.rplife.Home.BebasTextView
        android:text="Difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTimeStart"
        android:id="@+id/tvRange"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginStart="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etDueDate" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="22dp"
        android:layout_below="@id/tvRange"
        android:id="@+id/seeker"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRange"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etDueDate" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:layout_width="300dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etDueDate"
        android:hint="Due Date"
        android:gravity="center"
        android:background="@drawable/txt_due_date"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_alignLeft="@+id/etDesc"
        android:layout_alignStart="@+id/etDesc"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etTimeEnd" />

    <ImageView
        android:layout_width="71dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/add_task_cancelbtn"
        android:id="@+id/ivCancel"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="75dp" />

    <ImageView
        app:srcCompat="@drawable/add_task_checkbtn"
        android:id="@+id/ivAddNewTask"
        android:layout_width="71dp"
        android:layout_height="66dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="75dp"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp" />

    <com.example.dobit.rplife.Home.BebasTextView
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:id="@+id/tvMin"
        android:text="0"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/etDueDate" />


</android.support.constraint.ConstraintLayout>
