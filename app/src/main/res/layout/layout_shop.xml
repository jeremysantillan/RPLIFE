<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:paddingBottom="0dp"
    android:paddingTop="0dp"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="309dp"
        android:layout_height="442dp"
        app:srcCompat="@drawable/shop_dialog"
        android:id="@+id/imageView6"
        android:scaleType="fitCenter"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="271dp"
        android:layout_height="234dp"
        app:srcCompat="@drawable/shop_weapons_and_tools"
        android:id="@+id/imgvShopItems"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="64dp"
        app:layout_constraintVertical_bias="0.69"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:text="WEAPONS AND TOOLS"
        android:textColor="#F9690E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWeaponsAndTools"
        app:layout_constraintBottom_toBottomOf="@+id/imgvShopItems"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="6dp"
        android:editable="false" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:text="LOOT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvShopLoots"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/tvWeaponsAndTools"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgvShopItems"
        android:layout_marginBottom="8dp"
        android:editable="false" />

    <com.example.dobit.rplife.Home.BebasEditText
        android:text="Potions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvShopPotions"
        app:layout_constraintBottom_toBottomOf="@+id/imgvShopItems"
        android:layout_marginBottom="6dp"
        android:editable="false"
        app:layout_constraintRight_toRightOf="@+id/imgvShopItems"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="36dp"
        app:layout_constraintLeft_toRightOf="@+id/tvShopLoots"
        android:layout_marginLeft="36dp"
        app:layout_constraintHorizontal_bias="0.66" />



</android.support.constraint.ConstraintLayout>