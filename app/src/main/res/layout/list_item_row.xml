<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="5dp"
    android:id="@+id/cv"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/card"
            android:id="@+id/ivCard" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/green_card_sidebar"
            android:id="@+id/ivSide"
            android:layout_width="11dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/circlegradient"
            android:id="@+id/ivCircle" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="00"
            android:textSize="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="40dp"
            android:id="@+id/tvTimeNumber"
            android:textColor="@color/cardview_light_background" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="minutes"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="58dp"
            android:id="@+id/tvTime"
            android:textColor="@color/cardview_light_background" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="Due Date:"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:id="@+id/tvDueDateDisplay"
            android:textColor="@color/cardview_light_background" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="11/26/16"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="195dp"
            android:id="@+id/tvDueDate"
            android:textColor="@color/cardview_light_background" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="Wash dishes"
            android:textSize="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/tvActivity"
            android:textColor="@color/cardview_light_background" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="140dp"
            app:srcCompat="@drawable/timestart_icon"
            android:id="@+id/ivStart" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="57dp"
            android:layout_marginLeft="140dp"
            app:srcCompat="@drawable/timestop_btn"
            android:id="@+id/ivStop" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="8:30 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="170dp"
            android:id="@+id/tvTimeStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="10dp" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="9:30 PM"
            android:textSize="10dp"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="170dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTimeStop"
            android:textColor="@color/cardview_light_background" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="Difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginLeft="153dp"
            android:id="@+id/tvRange"
            android:textColor="@color/cardview_light_background"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="154dp"
            app:srcCompat="@drawable/green_difficulty_bar"
            android:id="@+id/ivDifficulty" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="Stamina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="91dp"
            android:layout_marginLeft="153dp"
            android:id="@+id/tvStamina"
            android:textColor="@color/cardview_light_background"
            android:textSize="14dp" />

    </FrameLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="153dp"
        app:srcCompat="@drawable/staminabar1"
        android:id="@+id/ivStamina" />
</android.support.v7.widget.CardView>