<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="5dp"
    android:id="@+id/cv"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="@android:color/transparent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">



        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/card"
            android:id="@+id/ivCard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitCenter"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"
            android:layout_margin="0dp"
            android:padding="0dp"/>

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/green_card_sidebar"
            android:id="@+id/ivSide"
            android:layout_width="11dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            app:srcCompat="@drawable/circlegradient"
            android:id="@+id/ivCircle"
            android:layout_width="110dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_height="110dp"
            android:scaleType="fitXY" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="minutes"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTime"
            android:textColor="#efefef"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivSide"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toRightOf="@+id/ivCircle"
            app:layout_constraintBottom_toBottomOf="@+id/ivCircle"
            app:layout_constraintTop_toBottomOf="@+id/tvTimeNumber"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="8dp" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="11/26/16"
            android:textSize="12dp"
            android:layout_width="47dp"
            android:id="@+id/tvDueDate"
            android:textColor="#efefef"
            app:layout_constraintLeft_toRightOf="@+id/tvDueDateDisplay"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_height="13dp" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="Wash dishes"
            android:textSize="26dp"
            android:layout_width="121dp"
            android:layout_height="24dp"
            android:id="@+id/tvActivity"
            android:textColor="#efefef"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivCircle"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDueDate" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:srcCompat="@drawable/timestop_btn"
            android:id="@+id/ivStop"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivCircle"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivStart" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="8:30 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTimeStart"
            android:textColor="#efefef"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@+id/ivStart"
            app:layout_constraintTop_toBottomOf="@+id/tvActivity"
            android:layout_marginTop="2dp" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="9:30 PM"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTimeStop"
            android:textColor="#efefef"
            app:layout_constraintLeft_toRightOf="@+id/ivStop"
            app:layout_constraintTop_toBottomOf="@+id/tvTimeStart"
            android:layout_marginTop="3dp" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="Difficulty"
            android:layout_width="55dp"
            android:layout_height="13dp"
            android:id="@+id/tvRange"
            android:textColor="#efefef"
            android:textSize="14dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivCircle"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivStop" />

        <ImageView
            android:layout_width="189dp"
            app:srcCompat="@drawable/green_difficulty_bar"
            android:id="@+id/ivDifficulty"
            android:scaleType="fitCenter"
            android:layout_height="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivCircle"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRange" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="Stamina"
            android:layout_width="39dp"
            android:id="@+id/tvStamina"
            android:textColor="#efefef"
            android:textSize="14dp"
            android:layout_height="13dp"
            card_view:layout_editor_absoluteY="128dp"
            card_view:layout_editor_absoluteX="144dp" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="Due Date:"
            android:textSize="12dp"
            android:layout_width="48dp"
            android:layout_height="13dp"
            android:id="@+id/tvDueDateDisplay"
            android:textColor="#efefef"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivCircle"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:srcCompat="@drawable/timestart_icon"
            android:id="@+id/ivStart"
            app:layout_constraintTop_toBottomOf="@+id/tvActivity"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivCircle"
            android:layout_marginLeft="8dp" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="00"
            android:textSize="42sp"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/tvTimeNumber"
            android:textColor="#efefef"
            app:layout_constraintTop_toTopOf="@+id/ivCircle"
            app:layout_constraintLeft_toLeftOf="@+id/ivCircle"
            app:layout_constraintRight_toRightOf="@+id/ivCircle"
            android:layout_marginTop="24dp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/staminabar1"
            android:id="@+id/ivStamina"
            app:layout_constraintTop_toBottomOf="@+id/tvStamina"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivCircle"
            android:layout_marginLeft="8dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>