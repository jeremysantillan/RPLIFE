<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:background="@drawable/card"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:clickable="true"
    android:id="@+id/cv">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        card_view:srcCompat="@drawable/card"
        android:id="@+id/imageView3" />

    <com.example.dobit.rplife.Home.BebasTextView
        android:text="Due Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDueDateDisplay"
        android:layout_marginLeft="150dp"
        android:textColor="@color/cardview_light_background" />

    <com.example.dobit.rplife.Home.BebasTextView
        android:text="66/66/66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="195dp"
        android:id="@+id/tvDueDate"
        android:textColor="@color/cardview_light_background" />

    <com.example.dobit.rplife.Home.BebasTextView
        android:text="Do Something"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTask"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        card_view:srcCompat="@drawable/timestart_icon"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/ivStartIcon" />

    <com.example.dobit.rplife.Home.BebasTextView
        android:text="1:00 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="168dp"
        android:id="@+id/tvStartTime"
        android:textSize="10dp"
        android:textColor="@color/cardview_light_background" />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        card_view:srcCompat="@drawable/timestop_btn"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/ivStopIcon" />

    <com.example.dobit.rplife.Home.BebasTextView
        android:text="2:00 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="168dp"
        android:id="@+id/tvStopTime"
        android:textSize="10dp"
        android:textColor="@color/cardview_light_background" />

    <com.example.dobit.rplife.Home.BebasTextView
        android:text="Difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:layout_marginLeft="152dp"
        android:id="@+id/tvRange"
        android:textSize="14dp"
        android:textColor="@color/cardview_light_background" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="152dp"
        card_view:srcCompat="@drawable/red_difficulty_bar"
        android:id="@+id/ivDifficulty" />

    <com.example.dobit.rplife.Home.BebasTextView
        android:text="Stamina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="152dp"
        android:id="@+id/tvStamina"
        android:textSize="14dp"
        android:textColor="@color/cardview_light_background" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        card_view:srcCompat="@drawable/staminabar1"
        android:layout_marginTop="102dp"
        android:layout_marginLeft="152dp"
        android:id="@+id/ivStamina" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/circlegradient"
            android:id="@+id/ivCircleGradient"
            android:text="00" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:id="@+id/tv1"
            android:textSize="32dp"
            android:textColor="@color/cardview_light_background" />

        <ImageView
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/green_card_sidebar"
            android:id="@+id/iv2"
            android:layout_width="11dp" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text="minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="55dp"
            android:id="@+id/tvMinutesOrHours"
            android:textColor="@color/cardview_light_background" />

    </FrameLayout>

</android.support.v7.widget.CardView>