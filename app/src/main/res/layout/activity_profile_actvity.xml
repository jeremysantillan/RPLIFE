        <pl.droidsonroids.gif.GifImageView
            android:layout_width="127dp"
            android:src ="@drawable/companion_gif"
            android:id="@+id/imgvCompanion"
            android:layout_marginEnd="65dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="65dp"
            android:layout_height="205dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imgvStats" />

        <ImageView
            android:layout_width="197dp"
            app:srcCompat="@drawable/profile_character_stats"
            android:id="@+id/imgvStats"
            android:layout_below="@+id/imgvHpMpSpEp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgvHpMpSpEp"
            android:layout_height="130dp" />

        <ImageView
            android:layout_width="212dp"
            app:srcCompat="@drawable/profile_character_hp_mp_sp_xp"
            android:id="@+id/imgvHpMpSpEp"
            android:layout_below="@+id/tvProfileName"
            android:layout_marginEnd="18dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imgvProfileHeader"
            android:layout_height="125dp" />

        <!--<pl.droidsonroids.gif.GifImageView-->
