      <pl.droidsonroids.gif.GifImageView
          android:src="@drawable/character_gif"
          android:id="@+id/imgvProfileCharacter"
          app:layout_constraintTop_toBottomOf="@+id/imgvProfileHeader"
          app:layout_constraintBottom_toBottomOf="parent"
          android:paddingRight="0dp"
          android:paddingLeft="0dp"
          app:layout_constraintVertical_bias="0.0"
          android:layout_height="500dp"
          android:scaleType="centerCrop"
          android:layout_width="150dp"
          app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:paddingTop="0dp"
        app:srcCompat="@drawable/profile_header"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:id="@+id/imgvProfileHeader"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

<com.github.mmin18.widget.RealtimeBlurView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:realtimeBlurRadius="20dp"
    app:realtimeOverlayColor="@android:color/transparent"
    android:visibility="invisible"
    android:id = "@+id/blurview"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp"
    android:layout_alignParentTop="true" />


