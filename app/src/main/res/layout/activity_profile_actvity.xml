<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_actvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@drawable/profile_bg"
    tools:context="com.example.dobit.rplife.ProfileActvity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        >

        <ImageView
            app:srcCompat="@drawable/companion_text"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/companion_txt"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/imgvStats"
            app:layout_constraintLeft_toRightOf="@+id/imgvProfileCharacter"
            android:layout_height="30dp"
            android:layout_width="60dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp" />

        <ImageView
            android:layout_width="55dp"
            app:srcCompat="@drawable/profile_shop_btn"
            android:id="@+id/imgvProfileShopBtn"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imgvCompanion"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgvProfileInventoryBtn"
            android:layout_marginTop="3dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_height="55dp" />

        <com.example.dobit.rplife.Home.BebasTextView
            android:text= "GAYNIEL213"
            android:textSize="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProfileName"
            android:layout_marginTop="8dp"
            android:textColor="#7ed5a7"
            app:layout_constraintTop_toBottomOf="@+id/imgvProfileHeader"
            android:layout_marginEnd="104dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="104dp" />

        <ImageView
            android:layout_width="55dp"
            app:srcCompat="@drawable/profile_inventory_btn"
            android:id="@+id/imgvProfileInventoryBtn"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imgvCompanion"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgvProfileSkillsBtn"
            android:layout_marginTop="3dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_height="55dp" />

        <ImageView
            android:layout_width="55dp"
            app:srcCompat="@drawable/profile_skills_btn"
            android:id="@+id/imgvProfileSkillsBtn"
            app:layout_constraintTop_toBottomOf="@+id/imgvProfileAchievementBtn"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imgvCompanion"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_height="55dp" />

        <ImageView
            android:layout_width="55dp"
            app:srcCompat="@drawable/profile_achievement_btn"
            android:id="@+id/imgvProfileAchievementBtn"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imgvCompanion"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgvStats"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_height="55dp" />

