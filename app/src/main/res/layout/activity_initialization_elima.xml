<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:paddingBottom="0dp"
    android:paddingTop="0dp"
    android:background="#73000000"
   >

    <ImageView
        android:layout_width="367dp"
        android:layout_height="524dp"
        app:srcCompat="@drawable/elima_dialog"
        android:id="@+id/imageView6"
        android:scaleType="fitCenter"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
     />

    <ImageView

        app:srcCompat="@drawable/elima_cancel"
        android:id="@+id/imgElimaCancel"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/imgSelectErudite"
        android:layout_toRightOf="@+id/imgSelectErudite"
        android:layout_toEndOf="@+id/imgSelectErudite"
        tools:clickable="true"
        android:clickable="true"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="@+id/imageView6"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="130dp" />

    <ImageView
        app:srcCompat="@drawable/elima_select"
        android:id="@+id/imgSelectElima"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        tools:clickable="true"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="130dp" />

</android.support.constraint.ConstraintLayout>